#include <stdio.h>

int gcdExtended(int a, int b, int *x, int *y) {
    if (a == 0) {
        *x = 0;
        *y = 1;
        return b;
    }
    int x1, y1;
    int gcd = gcdExtended(b % a, a, &x1, &y1);
    *x = y1 - (b / a) * x1;
    *y = x1;
    return gcd;
}

int modInverse(int a, int m) {
    int x, y;
    int g = gcdExtended(a, m, &x, &y);
    if (g != 1) return -1;
    return (x % m + m) % m;
}

int chineseRemainder(int num[], int rem[], int n) {
    int M = 1;
    for (int i = 0; i < n; i++)
        M *= num[i];

    int result = 0;
    for (int i = 0; i < n; i++) {
        int Mi = M / num[i];
        int inv = modInverse(Mi, num[i]);
        result += rem[i] * Mi * inv;
    }
    return result % M;
}

int main() {
    int num[] = {3, 5, 7};
    int rem[] = {2, 3, 2};
    int n = sizeof(num) / sizeof(num[0]);

    printf("x = %d\n", chineseRemainder(num, rem, n));
    return 0;
}
